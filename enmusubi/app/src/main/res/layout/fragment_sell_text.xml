<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.orange_money.enmusubi.activity.SellTextFragment"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    >

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.orange_money.enmusubi.layouts.EnmusubiTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_name"
            font:font="TanukiMagic.ttf"
            />
        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textImeMultiLine"
            />
        <com.orange_money.enmusubi.layouts.EnmusubiTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="授業名"
            font:font="TanukiMagic.ttf"
            />
        <EditText
            android:id="@+id/editClassName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textImeMultiLine"
            />
        <com.orange_money.enmusubi.layouts.EnmusubiTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="担当教員"
            font:font="TanukiMagic.ttf"
            />
        <EditText
            android:id="@+id/editTeacherName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textImeMultiLine"
            />
        <com.orange_money.enmusubi.layouts.EnmusubiTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/price"
            font:font="TanukiMagic.ttf"
            />
        <EditText
            android:id="@+id/editPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textImeMultiLine"
            />
        <com.orange_money.enmusubi.layouts.EnmusubiTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/content"
            font:font="TanukiMagic.ttf"
            />
        <EditText
            android:id="@+id/editContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textImeMultiLine"
            />
        <com.orange_money.enmusubi.layouts.EnmusubiTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo"
            font:font="TanukiMagic.ttf"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/photoName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/selectPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/selectphoto"
                android:layout_weight="2.5"
                android:contentDescription="画像の選択"
             />
        </LinearLayout>
        <ImageView
            android:id="@+id/textResist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/text_resist"
            android:layout_gravity="center"
            />
        </LinearLayout>

</FrameLayout>
